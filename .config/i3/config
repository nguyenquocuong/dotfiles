# border & title
for_window [class="^.*"] border pixel 1, title_format "<b> %class >> %title </b>"

# gaps
gaps inner 4
gaps outer 0

# font
font pango:monospace 11

# mod key used for most binds
# Mod1 = Alt
# Mod4 = Super
set $Mod Mod4

# direction keys
set $up l
set $down k
set $left j
set $right semicolon

